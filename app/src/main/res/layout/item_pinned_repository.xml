<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_pinned_repository_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Gitty" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_pinned_repository_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="GitHub Android Client" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_pinned_repository_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                tools:text="Kotlin" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_pinned_repository_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1 fork" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>